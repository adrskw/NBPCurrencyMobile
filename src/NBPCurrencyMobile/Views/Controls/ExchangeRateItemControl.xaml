<?xml version="1.0" encoding="UTF-8"?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NBPCurrencyMobile.Views.Controls.ExchangeRateItemControl"
             x:Name="RootView">
    <Label
        Text="{Binding Path=Title, Source={x:Reference RootView}}"
        Style="{StaticResource ExchangeRateItemTitleLabelStyle}" />
    <Label
        Text="{Binding Path=Value, Source={x:Reference RootView}}"
        Style="{StaticResource ExchangeRateItemValueLabelStyle}" />
</StackLayout>